rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // users/{uid}/data ドキュメントのみ読み書き許可
    // 認証済みユーザのみ、自分のドキュメントにアクセス可能
    match /users/{userId}/data {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // shortLinks コレクション: 短いコードで共有するためのドキュメント
    // - 読み取りは公開
    // - 書き込みは認証済みユーザ（匿名認証でも可）に限定
    match /shortLinks/{code} {
      allow read: if true;
      allow create: if request.auth != null;
      // 所有者のみ削除/更新可能（所有者の uid をフィールドとして保存していることが前提）
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
    }
  }
}
