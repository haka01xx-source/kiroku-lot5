rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // users/{uid}/data ドキュメントのみ読み書き許可
    // 認証済みユーザのみ、自分のドキュメントにアクセス可能
    match /users/{userId}/data {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // shortLinks コレクション: 短いコードで共有するためのドキュメント
    // - 読み取りは公開
    // - 書き込みは認証済みユーザ（匿名認証でも可）に限定
    match /shortLinks/{code} {
      allow read: if true;
      allow create: if request.auth != null;
      // 所有者のみ削除/更新可能（所有者の uid をフィールドとして保存していることが前提）
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
    }
    // accounts: 学籍番号ベースのアカウントデータ（アプリ側でパスワードチェックを行います）
    // 注意: このルールはサンプル実装向けであり、本番運用ではより厳格な認証を推奨します。
    match /accounts/{acctId} {
      // account メタデータ（passwordHash 等）は読み書き可
      allow read, write: if true;
      // account/{acctId}/data に保存されるテストデータも読み書き可
      match /data {
        allow read, write: if true;
      }
    }
  }
}
